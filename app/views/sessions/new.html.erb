<h1>Log In</h1>

<div class="flash"><%= flash[:message] if flash[:message] %></div>
<br><br>

<%= form_for :farrier do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.submit "Log In" %>
<% end %>